<h1>Check Out <%= @book.title() %></h1>

<form class="form-horizontal" action="/checkouts" method="post">
  <div class="form-group">
    <label for="patron_id" class="col-sm-2 control-label">Patron ID</label>
    <div class="col-sm-10">
      <input type="number" class="form-control" name="patron_id" placeholder="ID number">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default" name="book_id" value="<%= @book.id() %>">Finish Checkout</button>
    </div>
  </div>
</form>
