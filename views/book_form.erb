<form class="form-horizontal" action="/books" method="post">
  <!-- Input areas and checkboxes for author information -->
  <div class="form-group">
    <!-- Checkboxes to add existing authors to the book -->
    <label for="author" class="col-sm-2 control-label">Select Authors</label>
    <div class="col-sm-10">
      <% @authors.each() do |author| %>
        <div class="checkbox">
          <label>
            <input type="checkbox" name="author_ids[]" value="<%= author.id() %>"><%= author.last_name() %>, <%= author.first_name() %>
          </label>
        </div>
      <% end %>
    </div>
  </div>

    <!-- Input areas for creating new authors -->
  <div class="form-group">
    <label class="col-sm-2 control-label" for="first_name1">Add New Authors</label>
    <div class="form-inline col-sm-10">
      <input type="text" class="form-control" name="first_name1" placeholder="First Name">
      <input type="text" class="form-control" name="last_name1" placeholder="Last Name">
    </div>
  </div>
  <div class="form-group">
    <div class="form-inline col-sm-10 col-sm-offset-2">
      <input type="text" class="form-control" name="first_name2" placeholder="First Name">
      <input type="text" class="form-control" name="last_name2" placeholder="Last Name">
    </div>
  </div>

  <!-- Input areas for other book information -->
  <div class="form-group">
    <label for="title" class="col-sm-2 control-label">Title</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="title" placeholder="Title">
    </div>
  </div>

  <!-- Submit button -->
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Add</button>
    </div>
  </div>
</form>
