<form class="form-horizontal" action="/books" method="post">
  <div class="form-group">
    <label for="author" class="col-sm-2 control-label">Author</label>
    <div class="col-sm-3">
      <select class="form-control" name="author">
        <option value="new">New Author</option>
        <% @authors.each() do |author| %>
          <option value="<%= author.id() %>"> <%= author.last_name() %>, <%= author.first_name() %> </option>
        <% end %>
      </select>
    </div>
    <div class="col-sm-3">
      <input type="text" class="form-control" name="first_name" placeholder="First Name">
    </div>
    <div class="col-sm-4">
      <input type="text" class="form-control" name="last_name" placeholder="Last Name">
    </div>
  </div>

  <div class="form-group">
    <label for="title" class="col-sm-2 control-label">Password</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="title" placeholder="Title">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Add</button>
    </div>
  </div>
</form>
