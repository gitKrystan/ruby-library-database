<div class="panel panel-default">
  <div class="panel-body">
    <ul class="list-group">
      <% @results.each() do |book| %>
      <li class="list-group-item">
        <%= erb(:book_listing, :layout => false, :locals => {:book => book}) %>

        <% if @user == "librarian" %>
          <form class="form-group" action="/books/<%= book.id() %>" method="post">
            <button class="btn btn-default" type="submit" name="_method" value="delete">Remove Book from Database</button>
          </form>
        <% end %>
      </li>
      <% end %>
    </ul>
  </div>

  <% unless @message.nil? %>
    <div class="panel-footer"><%= @message %></div>
  <% end %>
</div>
